        var fileData = new FormData(); //设置formData对象 用以保存文件数据
        for(let i=0,len=myfile.length;i<len;i++){
            fileData.append("logo",myfile[i]); //把文件数据myfile存到fileData对象里面取数据名称为logo
        };
        ajax.send(fileData);//把数据对象发送
